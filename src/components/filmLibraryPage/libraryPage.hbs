<div class="container">
  <ul class="card-film__list">
    {{#each this}}
    <li class="card-film">
      <a class="card-film__item" name={{id}}>
        <img class="card-flim__img" src="https://image.tmdb.org/t/p/w500/{{backdrop_path}}" alt="Poster to film">
        <span class="card-flim__star">{{vote_average}}</span>
        <h3 class="card-flim__title">{{title}} ({{year}})</h3>
      </a>
    </li>
    {{/each}}
  </ul>
</div>